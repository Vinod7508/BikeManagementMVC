@model BikeManegement.ViewModels.Bike_ModelViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<br />
<h2 class="text-info">Edit Model of Vehicle</h2>
<form method="post" asp-action="Edit">
    <input hidden asp-for="BikeModel.Id" />


    <div class="form-group row">
        <div class="col-2">
            <label asp-for="BikeMakers"></label>
        </div>
        <div class="col-4">
            <select asp-for="BikeModel.BikeMakerId" asp-items="Model.CBikeMakers(Model.BikeMakers)" class="form-control"></select>           
        </div>
    </div>



    <div class="form-group row">
        <div class="col-2">
            <label asp-for="BikeModel.ModelName"></label>
        </div>
        <div class="col-4">
            <input asp-for="BikeModel.ModelName" class="form-control" />
        </div>
    </div>

    <br />

    <div class="form-group">
        <input type="submit" class="btn btn-primary" asp-route-id="@Model.BikeModel.Id" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</form>

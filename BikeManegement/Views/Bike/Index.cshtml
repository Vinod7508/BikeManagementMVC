@model IEnumerable<BikeManegement.Models.Bike>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Models of Vehicle</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-controller="Bike" asp-action="Create"><i class="fas fa-motorcycle"></i> &nbsp; Add New Bike</a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>Bike Details</th>
                <th>Price</th>
                <th>SellerInformation</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        <b>@Html.DisplayFor(m => item.BikeMaker.Name) (@Html.DisplayFor(m => item.Year))</b> <br />
                        <b>Model: </b>@Html.DisplayFor(m => item.BikeModel.Name)<br />
                        <b>Mileage: </b>@Html.DisplayFor(m => item.Mileage)
                    </td>
                    <td>@Html.DisplayFor(m => item.Price) @Html.DisplayFor(m => item.Currency)</td>
                    <td>
                        <b>Name: </b> @Html.DisplayFor(m => item.SellerName)<br />
                        <b>Email: </b>@Html.DisplayFor(m => item.SellerEmail)<br />
                        <b>Phone: </b>@Html.DisplayFor(m => item.SellerPhone)
                    </td>


                    <partial name="_Tablebuttonpartial" model="item.Id" />
              
                </tr>

            }

        </table>
    </div>
</div>


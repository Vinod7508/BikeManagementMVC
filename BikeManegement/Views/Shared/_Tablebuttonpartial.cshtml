<td class="text-right">
    <div class="btn-group" role="group">
        @*<a type="button" class="btn btn-primary" href="@Url.Action("Edit/" + item.Id)">Edit</a>*@


        <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model"> <i class="far fa-edit"></i></a>


        <form action="delete" method="post">
            <button onclick="if(!confirm('Are you sure you want to delete this Item ? '))
                               {return false}"
                    type="submit" class="btn btn-danger rounded-0" method="post" asp-action="Delete" asp-route-id="@Model">
                <i class="far fa-trash-alt"></i>
            </button>
        </form>
    </div>
</td>